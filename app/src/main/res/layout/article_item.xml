<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="articleViewModel"
            type="e.yoppie.newengineerblogs.viewmodel.ArticleViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/articleCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/articleTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{articleViewModel.articleTitle}" />

            <TextView
                android:id="@+id/articleAuthorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="記事" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>