<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="e.yoppie.newengineerblogs.viewmodel.ArticleItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112pt"
        android:background="@drawable/border_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_margin="16pt">

            <ImageView
                android:id="@+id/companyImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                app:imageUrl="@{viewModel.thumbnail}" />

            <TextView
                android:id="@+id/articleTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12pt"
                android:layout_toEndOf="@+id/companyImageView"
                android:text="@{viewModel.title}" />

            <TextView
                android:id="@+id/articleAuthorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12pt"
                android:layout_toEndOf="@+id/companyImageView"
                android:text="@{viewModel.author}" />

            <TextView
                android:id="@+id/articlePublishedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12pt"
                android:text="@{viewModel.publishedDate}" />
        </RelativeLayout>

    </RelativeLayout>

</layout>