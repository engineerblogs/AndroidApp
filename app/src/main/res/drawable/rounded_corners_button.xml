<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4pt" android:bottomRightRadius="4pt" android:topLeftRadius="4pt" android:topRightRadius="4pt" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1pt" android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4pt" android:bottomRightRadius="4pt" android:topLeftRadius="4pt" android:topRightRadius="4pt" />
            <solid android:color="@color/colorLightPrimary" />
            <stroke android:width="1pt" android:color="@color/colorPrimary" />
        </shape>
    </item>
</selector>